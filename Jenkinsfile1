pipeline {
    agent any

    environment {
        // Define environment variables
        NEXUS_VERSION = 'nexus3'
        NEXUS_PROTOCOL = 'http'
        NEXUS_URL = '192.168.28.144:8081' // Update if necessary
        NEXUS_REPOSITORY = 'DevopsClasse' // Nexus repository name
        CREDENTIALS_ID = 'nexus-cred'     // Jenkins credentials ID for Nexus
    }

    tools {
        maven 'M2_HOME'  // Ensure Maven is installed on Jenkins and configured with this name
    }

    stages {
        stage("Clone code from GitHub") {
            steps {
                // Clone the GitHub repository
                git branch: "main",
                    url: "https://github.com/Hamma-Mrabet/DevopsClass.git"
            }
        }

        stage("Maven Build") {
            steps {
                // Run Maven to package the project without running the tests
                sh "mvn package -DskipTests=true"
            }
        }

        stage("Upload to Nexus") {
            steps {
                script {
                    def artifactId = 'timesheet-devops' // Replace with your artifact ID
                    def version = '1.0' // Replace with your version
                    def packaging = 'jar' // Adjust according to your artifact type

                    // Use Nexus Artifact Uploader plugin
                    nexusArtifactUploader artifacts: [
                        [artifactId: artifactId, 
                         classifier: '', 
                         file: "target/${artifactId}-${version}.${packaging}", 
                         type: packaging]
                    ],
                    credentialsId:'nexus-cred',
                    groupId: 'tn.esprit.spring.services', // Replace with your group ID
                    nexusUrl: "${NEXUS_PROTOCOL}://${NEXUS_URL}/#admin",
                    repository:"repositories:${NEXUS_REPOSITORY}",
                    version: version,
                    nexusVersion: 'nexus3'

                }
            }
        }
    }

    post {
        // Notifications or cleanups
        success {
            echo "Build and deployment to Nexus completed successfully!"
        }
        failure {
            echo "Build failed. Please check the logs."
        }
    }
}
